<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:color="#0288D1" android:state_pressed="true"/>
    <!-- Focused state (keyboard / accessibility) -->
    <item android:color="#03A9F4" android:state_focused="true"/>
    <!-- Disabled state -->
    <item android:color="#B0BEC5" android:state_enabled="false"/>
    <!-- Default state -->
    <item android:color="#01579B"/>
</selector>